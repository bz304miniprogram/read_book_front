/* pages/bookdetail/bookdetail.wxss */

page {
  position: absolute;
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

canvas {
  position: fixed;
  top: 0;
  left: 999px;
}

.page__hd {
  padding: 40rpx;
}

.page__hd__inner {
  padding: 40rpx;
  border-radius: 20px;
  background-color: white;
}

.page__bd {
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 40rpx;
}

.page__bd__inner {
  padding: 20rpx;
  border-radius: 20px;
  background-color: white;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__img {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.weui-article__h1 {
  padding-left: 40px;
  padding-right: 40px;
}

.weui-article__p {
  padding-left: 40px;
  padding-right: 40px;
}

.space {
  padding: 40rpx;
}

.preview {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  position: absolute;
  z-index: 99;
}

.preview_img {
  width: 80%;
  height: 80%;
  position: fixed;
  left: 10%;
  z-index: 100;
  border: 1px dashed #fff;
}

.preview_button {
  width: 40%;
  position: fixed;
  left: 30%;
  z-index: 100;
  bottom: 5%;
}

.share {
  padding-top: 40rpx;
}

.preview_image {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 100;
}

.detail_button{
  color: blue;
}